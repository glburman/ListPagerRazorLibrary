@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

@RenderSection("Scripts", false)

<!-- the library's sheets-->
<link rel="stylesheet" href="../_content/ListPagerRazorLibrary/css/pager.css" id="themesheet" />

@RenderSection("Css", false)


<div class="d-flex justify-content-center">
    <h4>@ViewData["title"]</h4>
</div>

<button class="offset-3 btn btn-outline-secondary btn-sm shadow" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Notes
</button>

<div class="collapse row offset-3 col-md-6 p-4" id="collapseExample">
    <div class="card card-body">
        @RenderSection("Notes", false)
    </div>
</div>

<div class="d-flex justify-content-center ">

    <div class="col mt-4">
        @RenderBody()
    </div>
</div>


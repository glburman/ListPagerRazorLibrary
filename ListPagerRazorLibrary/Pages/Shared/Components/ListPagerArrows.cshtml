@model ListPagerArrowsModel

@{
    ListPagerItemModel left = new ListPagerItemModel()
    {
        Disabled = Model.IsDisabled,
        PageNumber = Model.LeftPageNumber,
        Text = Model.LeftArrow,
        SrWord = Model.LeftWord,
        CssClass = "arrow"
    };

    ListPagerItemModel right = new ListPagerItemModel()
    {
        Disabled = Model.IsDisabled,
        PageNumber = Model.RightPageNumber,
        Text = Model.RightArrow,
        SrWord = Model.RightWord,
        CssClass = "arrow"
    };

    if ((!Model.Single && Model.Direction < 0) || Model.Direction > 0)
    {
        <partial name="Components/ListPagerItem" model="@left" />
    }
    if ((!Model.Single && Model.Direction > 0) || Model.Direction < 0)
    {
        <partial name="Components/ListPagerItem" model="@right" />
    }
}




@model ListPagerModel

<script type="module" src="~/js/pager.js"></script>

<div id="list-pager-container">
    <ul class="list-pager pagination">

        @await Component.InvokeAsync("ListPagerArrows", new { state = Model, direction = -1 })

        @if (Model.ShowRecordsOf)
        {
            @await Component.InvokeAsync("ListPagerRecords", Model)
        }

        @if (Model.ShowPageOf)
        {
            @await Component.InvokeAsync("ListPagerPageOf", Model)
        }

        @await Component.InvokeAsync("ListPagerLinks", Model)
        

        @if (Model.ShowDropDown)
        {
            @await Component.InvokeAsync("ListPagerDropdown", Model)
        }

        @await Component.InvokeAsync("ListPagerArrows", new { state = Model, direction = 1 })

    </ul>
    @if (Model.ShowPageSize)
    {
        @await Component.InvokeAsync("ListPagerPageSize", Model)
    }
</div>

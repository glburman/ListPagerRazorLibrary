@model ListPagerModel



<ul id="list-pager" class="list-pager pagination">

    @await Component.InvokeAsync(AppConstants.VIEWNAME_ARROWS, new { state = Model, direction = -1 })

    @if (Model.ShowRecordsOf)
    {
        @await Component.InvokeAsync(AppConstants.VIEWNAME_RECORDS, Model)
    }

    @if (Model.ShowPageOf)
    {
        @await Component.InvokeAsync(AppConstants.VIEWNAME_PAGEOF, Model)
    }

    @await Component.InvokeAsync(AppConstants.VIEWNAME_LINKS, Model)


    @*@if (Model.ShowDropDown)
    {
        @await Component.InvokeAsync(AppConstants.VIEWNAME_DROPDOWN, Model)
    }*@

    @await Component.InvokeAsync(AppConstants.VIEWNAME_ARROWS, new { state = Model, direction = 1 })

</ul>
@if (Model.ShowPageSize)
{
    @await Component.InvokeAsync(AppConstants.VIEWNAME_PAGESIZE, Model)
}

